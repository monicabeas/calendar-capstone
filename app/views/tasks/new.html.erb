<link href="/css/style-responsive.css" rel="stylesheet">


<h1> Enter Task </h1>


<%= form_tag "/tasks", method: :post do  %>
	Title: <input type="text" name="input_title">
	<br />
	Due Date: <input type="date" name="input_due_date">
	<br />
	Notes: <input type="text" name="input_notes">
	<br /> 
	Task Type: <input type="text" name="input_type">
	<br />
	User id: <input type="number" name="user_type">
	<br />
	<input type="submit" Value="Enter Task">

<% end %> 